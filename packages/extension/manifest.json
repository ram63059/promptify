{
  "manifest_version": 3,
  "name": "Promptify",
  "version": "1.0.0",
  "description": "Enhance your AI prompts with Gemini magic.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "https://accounts.google.com/*"
  ],
  "action": {
    "default_title": "Open Promptify",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "floating-card.css"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' ; object-src 'self'"
  }
}